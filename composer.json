{
    "name": "snebes/notifications",
    "description": "Notifications component",
    "type": "library",
    "keywords": ["notifications", "email", "sms", "doctrine"],
    "homepage": "https://github.com/snebes/notifications",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Steve Nebes",
            "email": "steve@nebes.net"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "doctrine/collections": "^1.6",
        "symfony/event-dispatcher": "^3.4|^4.0",
        "swiftmailer/swiftmailer": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5|^8.0",
        "doctrine/orm": "^2.6"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SN\\Notifications\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SN\\Notifications\\Tests\\": "tests/"
        }
    }
}
